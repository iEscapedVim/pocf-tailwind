{
  "extends": "astro/tsconfigs/strict",
  "include": [".astro/types.d.ts", "**/*"],
  "exclude": ["dist"],
  "compilerOptions": {
    "strictNullChecks": true,
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [ "src/*" ],
      "@assets/*": [ "src/assets/*" ],
      "@icons/*": [ "src/assets/icons/*" ],
      "@imgs/*": [ "src/assets/imgs/*" ],
      "@js/*": [ "public/js/*" ],
      "@css/*": [ "src/assets/css/*" ],
      "@comps/*": [ "src/components/*" ],
      "@layouts/*": [ "src/layouts/*" ],
      "@pages/*": [ "src/pages/*" ],
      "@utils/*": [ "src/utils/*" ],
      "@nodes/*": [ "node_modules/*"],
      "@libs/*": ["src/lib/*"],
      "@types/": ["src/types/*"]
    },
  }
}
